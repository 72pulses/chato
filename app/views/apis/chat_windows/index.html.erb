<div class="row">
  <div class="col-md-12 chat-room-title">
    <div class="row">
      <div class="col-md-1">
        <div class="dropdown">
          <button class="chat-room-settings dropdown-toggle" type="button" data-toggle="dropdown"><i class="fa fa-cog chat-room-settings-icon" aria-hidden="true"></i>
          </button>
        </div>
      </div>
      <div class="col-md-10"><h4>Al Ameen</h4></div>
      <div class="col-md-1">
        <%= link_to '#', class:'chat-room-close' do %>
          <i class="fa fa-times chat-room-icon-icon" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class= "col-md-12 messages">
    <div class= "message-container">
      <div class="col-lg-12 message-content message-content-sender">
        <span class="send-message">Hello<span class="sent-message-time">12 PM</span>
        </span>
        <span>Sufin</span>
      </div>
      <div class="col-lg-12 message-content message-content-receiver">
        <span>Al</span>
        <span class="received-message">Hi....<span class="received-message-time">12:05 PM</span></span>
      </div>
    </div>
  </div>
  <div class=" col-md-12 is-typing is-typing-row"></div>
  <div class= "col-md-12 message-area">
    <div class= "row">
      <div class= "col-md-10">
        <div class= "row">
          <div class="col-md-11 message-textarea-container">
              <textarea class="message-textarea"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  CreateChatChannel();
</script>